{
    "compilerOptions": {
        "strict": true,
        "paths": {
            "@/*": [
                "./*"
            ],
            "@app/*": [
                "./app/*"
            ],
            "@components/*": [
                "./components/*"
            ],
            "@scripts/*": [
                "./scripts/*"
            ]
        }
    },
    "include": [
        "**/*.js",
        "**/*.jsx",
        "app/_layout.jsx",
        "app/index.jsx",
        "./index.js"
    ]
}